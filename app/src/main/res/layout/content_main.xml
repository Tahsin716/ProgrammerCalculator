<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.github.tahsin716.programmercalculator.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text=""
        android:gravity="right"
        android:id="@+id/operatorView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="0"
        android:textSize="60px"
        android:gravity="right"
        android:id="@+id/inputView"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="BIN:" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:text="0000"
            android:id="@+id/binView"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="DEC:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20px"
            android:text="0"
            android:id="@+id/decView"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/baseNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioBaseDec"
                android:text="DEC"
                android:checked="true"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="3dp"
                android:onClick="onBaseRadioClicked"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioBaseBin"
                android:text="BIN"
                android:checked="false"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="3dp"
                android:onClick="onBaseRadioClicked"/>

        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="17dp"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnXOR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_primary_background"
                android:textColor="@color/whiteText"
                android:minHeight="80dp"
                android:text="XOR"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnAND"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_primary_background"
                android:textColor="@color/whiteText"
                android:minHeight="80dp"
                android:text="AND"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnOR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_primary_background"
                android:textColor="@color/whiteText"
                android:minHeight="80dp"
                android:text="OR"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnMOD"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_primary_background"
                android:textColor="@color/whiteText"
                android:minHeight="80dp"
                android:text="MOD"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="7"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="Ã—"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="4"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnDivide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="60dp"
                android:text="Ã·"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="1"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="âˆ’"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="0"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="AC"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="="
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calc_button_secondary_background"
                android:textColor="@color/grayText"
                android:minHeight="70dp"
                android:text="+"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>